<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>WinExe</OutputType>
		<TargetFramework>net6.0-windows</TargetFramework>
		<Nullable>enable</Nullable>
		<AssemblyName>PowerHelper</AssemblyName>
		<RootNamespace>PowerHelper</RootNamespace>
		<Product>PowerHelper</Product>
		<UseWPF>true</UseWPF>
		<ApplicationIcon>power.ico</ApplicationIcon>
	</PropertyGroup>

	<ItemGroup>
	  <None Remove="power.ico" />
	  <None Remove="TrayPower.ico" />
	</ItemGroup>

	<ItemGroup>
	  <Resource Include="power.ico" />
	  <Resource Include="TrayPower.ico" />
	</ItemGroup>

	<ItemGroup>
	  <PackageReference Include="Hardcodet.Wpf.TaskbarNotification.Net6" Version="1.0.0" />
	  <PackageReference Include="System.Management" Version="6.0.0" />
	</ItemGroup>

</Project>
